@model Web.ViewModels.EditCustomPermissionViewModel

@{
    ViewBag.Title = "EditCustomPermissions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Permissions for @Model.Permission.Url</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CustomPermissionViewModel</legend>

        <div class="editor-label">
            Roles
        </div>
        <div class="editor-field">
            @Html.ListBoxFor(model => model.Permission.Roles, Model.AllRoles)
        </div>
        
        <div class="editor-label">
            User names
        </div>
        <div class="editor-field">
            @Html.ListBoxFor(model => model.Permission.UserNames, Model.AllUsers)
        </div>

        <p>
            @Html.HiddenFor(model => model.Permission.Url)
            @Html.HiddenFor(model => model.Permission.CustomPermissionId)            
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "ManageCustomPermissions")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
