@model IEnumerable<Web.Models.FacebookUser>
@{
    ViewBag.Title = "MyFriends";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script type="text/javascript">
        function loadFacebookPic(facebookId) {
            $.ajax({
                url: "@Url.Action("GetUserPic", "Home")",
                action: "POST",
                data: { facebookId: facebookId },
                type:"json"
            });
        }
    </script>
}
<h2>MyFriends</h2>


@foreach (var friend in Model)
{
    <div>
        <div class="column col1of4">
            <div class="picture">Loading....</div>
        </div>
        <div class="column  col3of4">
            <input type="hidden" value="@friend.Id"/>
            <div class="user-name">@friend.Name</div>
        </div>    
    </div>
}
